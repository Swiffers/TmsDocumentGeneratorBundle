<h1>{% trans %}Templates list{% endtrans %}</h1>

<table class="table table-striped table-condensed table-hover">
    <thead>
        <tr>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Created at{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>

    {% if templates|length == 0 %}
        <tr><td colspan="3">{% trans %}No template{% endtrans %}</td></tr>
    {% else %}
        {% for template in templates %}
            <tr>
                <td>{{ template.name }}</a></td>
                <td>{{ template.createdAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('tms_templategenerator_template_edit', { 'id': template.id }) }}" class="btn btn-default btn-sm">
                        {% trans %}Edit{% endtrans %}
                    </a>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
    </tbody>
</table>

<ul class="actions">
    <li>
        <a href="{{ path('tms_templategenerator_template_create') }}" class="btn btn-default btn-sm">
            {% trans %}Create a new template{% endtrans %}
        </a>
    </li>
</ul>